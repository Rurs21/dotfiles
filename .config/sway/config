# Read `man 5 sway-bar` for more information about this section.
bar {
    pango_markup enabled
    position top
    #height 25
    #font pango:DejaVu Sans Mono 11
    font pango:IPAGothic Regular 12
    #font pango:Source Han Sans JP 11
    #font pango:Gohu GohuFont Regular 8

    # When the status_command prints a new line to stdout, swaybar updates.
    #status_command while date +'%Y-%m-%d %l:%M:%S %p'; do sleep 1; done
    #status_command i3blocks
    status_command ~/.config/sway/scripts/status.sh

    colors {
        statusline #ffffff
        background #323232
        inactive_workspace #32323200 #32323200 #5c5c5c
    }
}

# Gaps
gaps inner 8

# border / titlebar
default_border normal
hide_edge_borders vertical
bindsym $mod+Shift+x [class="^.*"] border toggle
for_window [class="^.*"] border pixel 1
for_window [class="URxvt"] border normal
for_window [class="Leafpad"] border normal
