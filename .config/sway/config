set $ws3  "三"
set $ws4  "四"
set $ws5  "五"
set $ws6  "六"
set $ws7  "七"
set $ws8  "八"
set $ws9  "九"
set $ws10 "十"

set $output1 eDP-1
set $output2 HDMI-A-1

set $term kitty
set $menu "rofi -combi-modi drun,run,ssh -show combi"

set $lock 'swaylock -e -f -c 000000 --image=eDP-1:/home/rurs/Pictures/Wallpapers/AsukaLangleySoryu.png'
set $blurLock 'grim /tmp/lockscreen.png -o eDP-1' \
'convert /tmp/lockscreen.png -filter Gaussian -blur 0x8 /tmp/lockscreen.png'

## IDLE
 exec swayidle -w \
          timeout 300 $lock \
          timeout 600 'swaymsg "output * dpms off"' \
               resume 'swaymsg "output * dpms on"' \
          before-sleep $lock

## OUTPUTS
output eDP-1    pos 0    0 res 1920x1080
output HDMI-A-1 pos 1920 0 res 1680x1050

output eDP-1 bg /home/rurs/Pictures/Wallpapers/BlueStar.jpg fill
output HDMI-A-1 bg /home/rurs/Pictures/Wallpapers/RndrShape/pink_bg_ver3.png fill
